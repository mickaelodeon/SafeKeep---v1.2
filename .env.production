# Production Environment Variables for Railway Deployment

# Application Configuration
APP_NAME=SafeKeep
APP_ENV=production
APP_DEBUG=false
APP_URL=${RAILWAY_PUBLIC_DOMAIN}

# Database Configuration (Railway will inject these)
DB_HOST=${DATABASE_HOST}
DB_PORT=${DATABASE_PORT}
DB_NAME=${DATABASE_NAME}
DB_USER=${DATABASE_USER}
DB_PASS=${DATABASE_PASSWORD}

# Email Configuration (SendGrid SMTP - RECOMMENDED)
MAIL_ENABLED=true
MAIL_HOST=smtp.sendgrid.net
MAIL_PORT=587
MAIL_ENCRYPTION=tls
MAIL_USERNAME=apikey
MAIL_PASSWORD=${SENDGRID_API_KEY}
MAIL_FROM_EMAIL=johnmichaeleborda79@gmail.com
MAIL_FROM_NAME=SafeKeep - Lost & Found
MAIL_REPLY_TO=johnmichaeleborda79@gmail.com

# Security
SESSION_LIFETIME=1440
CSRF_TOKEN_LIFETIME=3600
PASSWORD_RESET_TIMEOUT=3600

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/

# Railway Specific
PORT=${PORT}
RAILWAY_ENVIRONMENT=production