{
    "name": "safekeep",
    "description": "SafeKeep - School Lost & Found System",
    "type": "project",
    "require": {
        "php": "^8.0",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "SafeKeep\\": "includes/"
        }
    },
    "scripts": {
        "start": "php -S 0.0.0.0:8080 -t .",
        "test": "phpunit",
        "lint": "phpcs --standard=PSR2 includes/ auth/ posts/ admin/"
    },
    "config": {
        "optimize-autoloader": true
    }
}