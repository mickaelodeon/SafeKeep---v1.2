{
    "name": "safekeep/lost-and-found",
    "description": "School-based Lost & Found web application",
    "type": "project",
    "version": "1.0.0",
    "authors": [
        {
            "name": "SafeKeep Development Team",
            "email": "dev@safekeep.school"
        }
    ],
    "require": {
        "php": "^8.1||^8.2||^8.3",
        "phpmailer/phpmailer": "^6.12",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "SafeKeep\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SafeKeep\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "prefer-stable": true,
        "sort-packages": true,
        "platform": {
            "php": "8.2"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-check": "phpcs --standard=PSR12 --extensions=php .",
        "cs-fix": "phpcbf --standard=PSR12 --extensions=php ."
    }
}